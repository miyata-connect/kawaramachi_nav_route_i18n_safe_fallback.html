+name: WalkNav Spec & Policy Guard
+
+on:
+  pull_request:
+    branches: [ "**" ]
+
+jobs:
+  guard:
+    runs-on: ubuntu-latest
+    steps:
+      - uses: actions/checkout@v4
+
+      - name: Verify required docs exist
+        run: |
+          set -e
+          REQ=(
+            docs/WalkNav_Operation_Policy.md
+            docs/WalkNav_Operation_Checklist.md
+            docs/WalkNav_Operation_Template.md
+            docs/WalkNav_Progress_Protocol.md
+            spec/WalkNav_Functional_Spec_v2025-10-25.md
+          )
+          missing=0
+          for f in "${REQ[@]}"; do
+            if [[ ! -f "$f" ]]; then
+              echo "::error::Missing required file: $f"
+              missing=1
+            fi
+          done
+          exit $missing
+
+      - name: Validate Functional Spec version pin
+        run: |
+          set -e
+          grep -R "Functional Spec / v2025-10-25" -n README* docs/ spec/ || {
+            echo "::error::Functional Spec version v2025-10-25 not referenced"; exit 1; }
+
+      - name: Optional: check references from source headers (non-blocking)
+        run: |
+          set -e
+          if command -v rg >/dev/null 2>&1; then
+            rg -n -S "(WalkNav Operation Policy|Operation Checklist|Operation Template|Progress Protocol)"                       --glob '!node_modules' --glob '!dist' --glob '!build' || true
+          else
+            echo "ripgrep not installed; skipping hint-only scan"
+          fi
